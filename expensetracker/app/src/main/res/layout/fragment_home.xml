<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#FFFFFF"
    android:onClick="a"
    tools:context=".ui.home.HomeFragment"
    tools:visibility="visible">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="412dp"
        android:layout_height="68dp"
        android:layout_marginTop="8dp"
        android:contentDescription="An expense tracking app built as a part of learning"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="154dp"
        android:layout_height="29dp"
        android:text="Monthly Income"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="251dp" />

    <EditText
        android:id="@+id/income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Total monthly income "
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="Income"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="268dp" />

    <EditText
        android:id="@+id/nameOfPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Name of the Person "
        android:ems="10"
        android:hint="Your name"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="171dp" />

    <TextView
        android:id="@+id/expenseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoText="true"
        android:background="#FFFFFF"
        android:backgroundTint="#F4EFEF"
        android:capitalize="characters"
        android:clickable="false"
        android:contentDescription="Expenses which you need to pay monthly "
        android:cursorVisible="true"
        android:editable="false"
        android:fontFamily="monospace"
        android:freezesText="true"
        android:gravity="center"
        android:inputType="none"
        android:text="Fixed monthly expenses (Rent, Bills , EMI etc)"
        app:autoSizeTextType="uniform"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="356dp" />

    <EditText
        android:id="@+id/expenseName1"
        android:layout_width="152dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Type of Expense"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="397dp" />

    <EditText
        android:id="@+id/expenseAmount1"
        android:layout_width="182dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Amount "
        android:inputType="number"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="397dp" />

    <Button
        android:id="@+id/addMoreExpense"
        android:layout_width="50dp"
        android:layout_height="47dp"
        android:backgroundTint="#4CAF50"
        android:text="+"
        tools:layout_editor_absoluteX="345dp"
        tools:layout_editor_absoluteY="453dp" />

</androidx.constraintlayout.widget.ConstraintLayout>